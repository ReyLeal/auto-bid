
<div class="container-fluid" id="home-container">
  <% if current_user || current_dealer %>
  <%= render partial: "layouts/deal_auc_header" %>


  <div class="show-auction-info col-md-12 text-center">

      <div class="auction-show container">
        <div class="borderbottom"><h1><%= @auction.title.capitalize%></h1></div>
        <h5><%= @auction.year%>
        <%= @auction.make%> |
        <%= @auction.model%> |
        <a class="top-cta-button empty-auc" data-toggle="modal" data-target="#myModalauctionshow">
        View More
        </a></h5>
        <table class="table table-hover">
          <thead>
            <tr>
              <th>#</th>
              <th>Company Name</th>
              <th>Company Dealer Name</th>
              <th>Current Bid</th>
              <th>Time</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>1</td>
              <td>Anna</td>
              <td>Anna</td>
              <td>Anna</td>
              <td>Anna</td>
            </tr>
            <tr>
              <td>2</td>
              <td>Anna</td>
              <td>Anna</td>
              <td>Anna</td>
              <td>Debbie</td>
            </tr>
            <tr>
              <td>3</td>
              <td>Anna</td>
              <td>Anna</td>
              <td>Anna</td>
              <td>John</td>
            </tr>
          </tbody>
        </table>

        <% if @auction.user_id = current_user %>
        <%= link_to "<button class='top-cta-button btn-user-auc' type='button'>Delete Auction</button>".html_safe,user_auction_url, method: :delete, data: { confirm: 'Are you sure?' }, id:"destroy" %>
        <%= link_to "<button class='top-cta-button btn-user-auc' type='button'>Back</button>".html_safe, user_auctions_url(current_user), id:"back" %>
        <% end %>
      </div>



    </div>
  </div>

<%= render partial: "footer" %>
<% end %>
</div>

<div id="myModalauctionshow" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title"><%= @auction.title.capitalize%> </h4>
      </div>
      <div class="modal-body">
        <ul class="auc_modal">
          <li class="auc_show">Year: <%= @auction.year%></li><br>
          <hr>
          <li class="auc_show">Make: <%= @auction.make%></li><br>
          <hr>
          <li class="auc_show">Model: <%= @auction.model%></li><br>
          <hr>
          <li class="auc_show">Miles From: <%= @auction.miles_from%></li><br>
          <hr>
          <li class="auc_show">Color: <%= @auction.color%></li><br>
          <hr>
          <li class="auc_show">Features: <%= @auction.features%></li><br>
          <hr>
          <li class="auc_show">Max Price: <%= @auction.max_price%></li><br>
          <hr>
          <li class="auc_show">Address: <%= @auction.address%></li><br>
          <hr>
          <li class="auc_show">Expiration Date: <%= time_tag (@auction.expiration_date).to_date%></li><br>
          <hr>
      </ul>

    </div>
  </div>
</div>
