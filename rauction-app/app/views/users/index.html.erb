<div id="home-container">
  <%= render partial: "header" %>

  <% if current_user %>
  <div class="top-current text-center">
    <h2 id="welcome"> Hello <%= current_user.name %> </h2>
    <h3 id= "welcome">What would you like to do?</h3>
    <div class="list-current text-center" >
      <div class="sign-up-top col-md-4 text-center">
        <div class="font-a-top">
          <i class="fa fa-user" aria-hidden="true"></i>
        </div>
        <div class="text-top">
          <button type="button" class="top-cta-button" data-toggle="modal" data-target="#myModaledit">
            Edit
          </button>
        </div>
      </div>

      <div class="create-auction col-md-4 text-center">
        <div class="font-a-top">
          <i class="fa fa-check-square-o" aria-hidden="true"></i>
        </div>
        <div class="text-top">
          <%=link_to "<button class='top-cta-button' type='button'>Create Auction</button>".html_safe, new_user_auction_url(current_user)%>
        </div>
      </div>

      <div class="wait col-md-4 text-center">
        <div class="font-a-top">
          <i class="fa fa-magic" aria-hidden="true"></i>
        </div>
        <div class="text-top">
          <%=link_to "<button class='top-cta-button marg-left' type='button'>View Auctions</button>".html_safe, user_auctions_url(current_user)%>
        </div>
      </div>
    </div>
  </div>


  <% else %>
  <div class="top-image">
  </div>
    <div class="top text-center">
      <h3>Find Your Dream Car</h3>
      <h4>Sit back and let us do the work for you</h4>
      <p class="p-home">
        We created a very easy and convenient way to search for cars without even leaving your house
      </p>
    </div>

    <div class="list">
      <div class="sign-up col-md-4 text-center">
        <div class="font-a">
          <i class="fa fa-user" aria-hidden="true"></i>
        </div>
        <div class="text">
          Sign up to start using our services
        </div>
      </div>

      <div class="create-auction col-md-4 text-center">
        <div class="font-a">
          <i class="fa fa-check-square-o" aria-hidden="true"></i>
        </div>
        <div class="text">
          Create an auction for the car you want
        </div>
      </div>

      <div class="wait col-md-4 text-center">
        <div class="font-a">
          <i class="fa fa-magic" aria-hidden="true"></i>
        </div>
        <div class="text">
          Relax while your local dealers compete to give you the best price
        </div>
      </div>
    </div>


    <div class="start text-center">
      Start Looking for your dream car
      <button type="button" class="top-cta-button home-b" data-toggle="modal" data-target="#myModalregister">
      Register
      </button></a>
    </div>


    <%= render partial: "bot-about-us-pictures" %>

    <% end %>
  <%= render partial: "footer" %>

</div>

<div id="myModaledit" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Edit Profile</h4>
      </div>
      <div class="modal-body">
        <%= render "users/form" %>
      </div>

    </div>
  </div>
</div>
